    <div class="container-fluid">
        <h1>GESTIONAR BLOGS</h1>
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-6 border border-dark align-self-start">
                
                <select id="select_pais" class="form-select" aria-label="Pais" onchange="getPaises(this.value)">
                    <option value="null" selected>Seleccione Blog</option>
                    <% 
                        blogs.forEach((blog) => { 
                        let paises_publicados = blog.paises_blog.length;
                        let id_pais = paises_publicados === 0 ? null : blog.pais[0]._id;
                        let msj_paises_publicados = paises_publicados === 0 ? 'Sin Publicar' : 'Publicado '+ blog.pais[0].nombre;
                        let json_value = JSON.stringify({id_blog: blog._id, id_pais: id_pais });
                    %>
                        <option value="<%=json_value; %>"><%=blog.nombre; %> - <%=msj_paises_publicados; %></option>
                    <% }); %>
                </select>

                <div id="resultados_blog">
                    <div id="paises"></div>
                    <div id="resultados_paises">
                        <div id="ciudades"></div>
                        <div id="resultados_ciudades">
                            <div id="categorias"></div>
                            <div id="resultados_categorias">
                                <div id="atracciones"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div  class="col-sm-12 col-md-6 border border-dark align-self-start">
                
            </div>
        </div> 
